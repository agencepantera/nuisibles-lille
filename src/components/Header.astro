---
const links = [
  { text: 'Accueil', href: '/' },
  { text: 'Nos Services', href: '/services' },
  { text: 'Nuisibles', href: '/nuisibles' },
  {
    text: 'Articles',
    href: '/articles',
    subItems: [
      { text: 'La désinsectisation avec Nuisibles-Lille', href: '/articles/la-desinsectisation-avec-nuisible-lille' },
      { text: 'La dératisation avec Nuisibles-Lille', href: '/articles/la-deratisation-avec-nuisible-lille' }
    ]
  },
  { text: 'Contact', href: '/contact' },
];
---

<header class="bg-white shadow-sm">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-24"> <!-- Hauteur augmentée -->
      <div class="flex items-center">
        <a href="/" class="flex-shrink-0 flex items-center">
          <img 
          src="/images/nuisibles-lille.webp" 
          alt="Nuisibles Lille" 
          width="250"
          height="25O"
          class="h-28 w-28 object-contain"
        />
        </a>
      </div>
      <div class="hidden sm:ml-6 sm:flex sm:items-center">
        <div class="flex space-x-12">
          {links.map(link => (
            <div class="relative group">
              <a
                href={link.href}
                class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-700 hover:text-primary transition-colors"
              >
                {link.text}
                {link.subItems && (
                  <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                )}
              </a>
              {link.subItems && (
                <div class="absolute hidden group-hover:block w-72 bg-white border shadow-lg rounded-lg mt-1 py-2 z-50">
                  {link.subItems.map(subItem => (
                    <a
                      href={subItem.href}
                      class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary transition-colors"
                    >
                      {subItem.text}
                    </a>
                  ))}
                </div>
              )}
            </div>
          ))}
        </div>
        <div class="ml-12">
          <a
          href="/contact"
          class="inline-flex items-center px-4 py-2 border-2 border-blue-900 text-sm font-medium rounded-md text-blue-900 hover:bg-blue-700 hover:text-white transition-colors"
        >
          Diagnostic gratuit
        </a>
        </div>
      </div>
      <div class="flex items-center sm:hidden">
        <button
          type="button"
          class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-primary"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Ouvrir le menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </nav>
  <div class="sm:hidden hidden" id="mobile-menu">
    <div class="pt-2 pb-3 space-y-1">
      {links.map(link => (
        <>
          <a
            href={link.href}
            class="block pl-3 pr-4 py-2 text-base font-medium text-gray-700 hover:text-primary"
          >
            {link.text}
          </a>
          {link.subItems && (
            <div class="pl-6">
              {link.subItems.map(subItem => (
                <a
                  href={subItem.href}
                  class="block pl-3 pr-4 py-2 text-sm text-gray-600 hover:text-primary"
                >
                  {subItem.text}
                </a>
              ))}
            </div>
          )}
        </>
      ))}
      <div class="pl-3 pr-4 py-2">
        <a
        href="/contact"
        class="inline-flex items-center px-4 py-2 border-2 border-blue-900 text-sm font-medium rounded-md text-blue-900 hover:bg-blue-700 hover:text-white transition-colors"
      >
        Diagnostic gratuit
      </a>
      </div>
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.querySelector('.mobile-menu-button');
  const mobileMenu = document.querySelector('#mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>