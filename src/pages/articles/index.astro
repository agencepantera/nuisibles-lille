---
import Layout from '../../layouts/Layout.astro';

const articles = [
  {
    title: "La désinsectisation avec Nuisibles-Lille",
    description: "Guide complet sur nos méthodes de désinsectisation professionnelle",
    href: "/articles/la-desinsectisation-avec-nuisible-lille",
    image: "/images/desinctisation-nuisibles-lille.webp",
    date: "2024-03-20"
  },
  {
    title: "Dératisation Professionnelle : Solutions Stratégiques",
    description: "Découvrez nos solutions professionnelles de dératisation pour les entreprises et particuliers",
    href: "/articles/la-deratisation-avec-nuisible-lille",
    image: "/images/deratisation-lille-nuisibles.webp",
    date: "2024-03-21"
  },
  // D'autres articles peuvent être ajoutés ici
];
---

<Layout
  title="Articles et Guides | Nuisibles-Lille"
  description="Découvrez nos articles et guides pratiques sur la lutte contre les nuisibles. Conseils d'experts et solutions professionnelles."
>
  <section class="bg-primary text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold mb-6">Articles et Guides</h1>
        <p class="text-xl max-w-3xl mx-auto">
          Explorez nos ressources et conseils d'experts pour tout savoir sur la lutte contre les nuisibles
        </p>
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {articles.map(article => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <a href={article.href} class="block">
              <img
                src={article.image}
                alt={article.title}
                class="w-full h-48 object-cover"
              />
              <div class="p-6">
                <time datetime={article.date} class="text-sm text-gray-500">
                  {new Date(article.date).toLocaleDateString('fr-FR', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                <h2 class="text-xl font-semibold text-gray-900 mt-2 mb-3">
                  {article.title}
                </h2>
                <p class="text-gray-600">
                  {article.description}
                </p>
                <div class="mt-4 text-accent font-medium">
                  Lire la suite →
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>